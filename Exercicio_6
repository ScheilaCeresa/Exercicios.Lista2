algoritmo "Exer6_Lista2"
var
   ano, ano_nas, vali, idade: inteiro
inicio

      escreva ("Informe o seu ano de nascimento e o ano que estamos: ")
      leia(ano_nas, ano)
      
      idade <- ano - ano_nas
      vali <- abs (18 - idade)
      
      se idade <= 18 entao
         escreva ("Voce tem ", idade, ", falta ", vali, " anos para se alistar!")
      
      senao
           escreva ("Voce tem ", idade, ", passou ", vali, " anos para se alistar!")
      fimse
      

fimalgoritmo